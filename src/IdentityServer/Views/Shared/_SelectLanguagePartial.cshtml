@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.NativeName })
        .ToList();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}
<div id="btnLang" title="@Localizer["Request culture provider:"] @requestCulture?.Provider?.GetType().Name">
    @foreach (var item in cultureItems)
    {
        <div class="formLoad">
        <form asp-controller="Account"
              asp-action="Setlanguage" asp-route-returnUrl="@returnUrl"
              method="post" class="form-horizonal" role="form">
            <input hidden type="text" class="validate" name="culture" value="@item.Value" />
            @{ 
                var cls = requestCulture.RequestCulture.Culture.ToString() == item.Value ? "change-color" : "";
            }
            <button class="@cls"   type="submit">
                    @item.Text 
            </button>
        </form>
        </div>
    }
    <div class="clear"></div>
</div>
