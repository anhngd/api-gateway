@model IdentityServer.Public.Account.LoggedOutViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
}

<div class="page-header logged-out">
    <h4>
        @Localizer["Logout"]<br />
        <small>@Localizer["You are now logged out"]</small>
    </h4>

    @if (Model.PostLogoutRedirectUri != null)
    {
    <div>
        Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">@Localizer["here"]</a>@Localizer["to return to the"]
        <span>@Model.ClientName</span> @Localizer["application."]
    </div>
    }

    @if (Model.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
    }
    <div>
        <div class="col-md-12">
            <div><center><a href="/account/login" class="text-tripbricks">@Localizer["You have an account? Login here!"]</a></center></div>
        </div>
    </div>
</div>

@section scripts
    {
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
