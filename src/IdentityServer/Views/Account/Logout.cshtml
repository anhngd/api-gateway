@model IdentityServer.Public.Account.LogoutViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="logout-page">
    <div class="page-header">
        <h4>@Localizer["Logout"]</h4>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <p>@Localizer["Would you like to logout of IdentityServer?"]</p>
            <form asp-action="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">@Localizer["Yes"]</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>