@model IdentityServer.Public.Account.RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="page-header">
    @if (!Model.Result)
    {
    <h4>@Localizer["Register"]</h4>
    <p>@Localizer["Type your information"]</p>
    }
</div>

<div class="row">
    <div class="col-sm-12">
        @if (!Model.Result)
        {
            if (Model.Message == "" || Model.Message == null || Model.Message == string.Empty)
            {
            }
            else if (Model.Message == "password_contain")
            {
        <div class="alert alert-danger" role="alert">
            @Localizer["The password must contain at least three character categories among the following:"]<br />
            - @Localizer["Uppercase characters (A-Z)"] <br />
            - @Localizer["Lowercase characters (a-z)"]<br />
            - @Localizer["Digits (0-9"]
        </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Message
                </div>
            }
        }
        else
        {
                <div class="alert alert-success" role="alert">
                    @Model.Message
                    <br />@Localizer["Please confirm an email was sended to your email!"]
                </div>
        }
        <form asp-route="Register">
            @if (!Model.Result)
            {
                <fieldset>
                    <div class="form-group">
                        <label asp-for="FamilyName">@Localizer["Family name:"]</label>
                        <input class="form-control" placeholder=@Localizer["Type your family name"] asp-for="FamilyName" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="GivenName">@Localizer["Given name:"]</label>
                        <input class="form-control" placeholder=@Localizer["Type your given name"] asp-for="GivenName" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">@Localizer["Email"]</label>
                        <input class="form-control" placeholder=@Localizer["Type your email"] asp-for="Email" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">@Localizer["Password"]</label>
                        <input type="password" class="form-control" placeholder="*****" asp-for="Password" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">@Localizer["Confirm password:"]</label>
                        <input type="password" class="form-control" placeholder="*****" asp-for="ConfirmPassword" autofocus>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-tripbricks" name="button" value="register">@Localizer["Register"]</button>
                    </div>
                </fieldset>
            }
            <div class="col-md-12">
                <div><center><a href="/account/login" class="text-tripbricks">@Localizer["You have an account? Login here!"]</a></center></div>
            </div>
            <div class="col-md-12">
                <div><center><a href="/account/forgotpassword" class="text-tripbricks">@Localizer["Forgot password?"]</a></center></div><br />
            </div>
        </form>
    </div>
</div>
